<div class="row">
  <div class="col-md-10 offset-1">
    <div class="text-center">
      <h2>私のお気に入りユーザー</h2>
      <h5>フォロー：<%= @user.active_relationships.count %>件</h5>
      <h5>フォロワー：<%= @user.passive_relationships.count %>件</h5>
    </div>
    <ul class="tab">
      <li class="select">フォローユーザー</li>
      <li>フォロワーユーザー</li>
    </ul>

    <div class="space">
    <ul class="content">
      <li>
        <div class="tab-pane fade active show" id="home">
          <table class="table">
            <thead>
              <tr>
                <th>#</th>
                <th scope="col">ユーザー名</th>
              </tr>
            </thead>
            <tbody>
              <% @user.following.each_with_index do |follow, index| %>
              <tr>
                <th scope="row"><%= index+1 %></th>
                <td><%= link_to follow.name, follow %></td>
                <% end %>

              </tr>
            </tbody>
          </table>
        </div>
      </li>
      
      <li class="hide">
        <div class="space">
          <div class="tab-pane fade" id="profile">
            <table class="table">
              <thead>
                <tr>
                  <th>#</th>
                  <th scope="col">ユーザー名</th>
                </tr>
              </thead>
              <tbody>
                <% @user.followers.each_with_index do |follower, index| %>
                  <tr>
                    <th scope="row"><%= index+1 %></th>
                    <td><%= link_to follower.name, follower %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </li>
    </ul>
    </div>
    </div>
  </div>
