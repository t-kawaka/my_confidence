<div class="row">
  <div class="col-md-8 offset-2">
    <div class="text-center">
      <h2>私のお気に入りユーザー</h2>
      <h5>フォロー：<%= user.active_relationships.count %>件</h5>
      <h5>フォロワー：<%= user.passive_relationships.count %>件</h5>
    </div>
    <ul class="nav nav-tabs">
      <li class="nav-item">
        <a class="nav-link active" data-toggle="tab" href="#home">フォローユーザー</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#profile">フォロワーユーザー</a>
      </li>
    </ul>

    <div class="space">
      <div id="myTabContent" class="tab-content">
        <div class="tab-pane active" id="home">
          <table class="table">
            <thead>
              <tr>
                <th>No.</th>
                <th>アイコン画像</th>
                <th scope="col">ユーザー名</th>
                <th>
              </tr>
            </thead>
            <tbody>
              <% user.following.each_with_index do |follow, index| %>
              <tr>
                <td scope="row"><%= index+1 %></td>
                <% if follow.icon.present? %>
                  <td><%= image_tag(follow.icon_url, :width => "70px") if follow.icon %></td>
                <% else %>
                  <td><%= image_tag 'default.jpg', :width => '70px' %></td>
                <% end %>
                <td><%= link_to follow.name, follow %>さん</td>
                <% end %>
              </tr>
            </tbody>
          </table>
        </div>

        <div class="tab-pane fade" id="profile">
          <table class="table">
            <thead>
              <tr>
                <th>No.</th>
                <th>アイコン画像</th>
                <th scope="col">ユーザー名</th>
              </tr>
            </thead>
            <tbody>
              <% user.followers.each_with_index do |follower, index| %>
              <tr>
                <td scope="row"><%= index+1 %></td>
                <% if follower.icon.present? %>
                  <td><%= image_tag(follower.icon_url, :width => "70px") if follower.icon %></td>
                <% else %>
                  <td><%= image_tag 'default.jpg', :width => '70px' %></td>
                <% end %>
                <td><%= link_to follower.name, follower %></td>
                <% end %>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
