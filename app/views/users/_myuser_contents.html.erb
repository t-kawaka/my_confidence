<div class="row">
  <div class="col-md-8 offset-2">
    <div class="text-center">
      <h2>私のお気に入りユーザー</h2>
      <h5>フォロー：<%= @user.active_relationships.count %>件</h5>
      <h5>フォロワー：<%= @user.passive_relationships.count %>件</h5>
    </div>
    <ul class="tab">
      <li class="select">フォローユーザー</li>
      <li>フォロワーユーザー</li>
    </ul>

    <div class="space">
    <ul class="content">
      <li>
        <table class="table">
          <thead>
            <tr>
              <th>No.</th>
              <th>アイコン画像</th>
              <th scope="col">ユーザー名</th>
              <th>
            </tr>
          </thead>
          <tbody>
            <% @user.following.each_with_index do |follow, index| %>
            <tr>
              <td scope="row"><%= index+1 %></td>
              <% if follow.icon.present? %>
                <td><%= image_tag(follow.icon_url, :width => "70px") if follow.icon %></td>
              <% else %>
                <td><%= image_tag 'default.jpg', :width => '70px' %></td>
              <% end %>
              <td><%= link_to follow.name, follow %></td>
              <% end %>
            </tr>
          </tbody>
        </table>
      </li>

　　　<div class="space">
      <li class="hide">
        <table class="table">
          <thead>
            <tr>
              <th>No.</th>
              <th>アイコン画像</th>
              <th scope="col">ユーザー名</th>
            </tr>
          </thead>
          <tbody>
            <% @user.followers.each_with_index do |follower, index| %>
            <tr>
              <td scope="row"><%= index+1 %></td>
              <% if follower.icon.present? %>
                <td><%= image_tag(follower.icon_url, :width => "70px") if follower.icon %></td>
              <% else %>
                <td><%= image_tag 'default.jpg', :width => '70px' %></td>
              <% end %>
              <td><%= link_to follower.name, follower %></td>
              <% end %>
            </tr>
          </tbody>
        </table>

      </li>
      </div>
    </ul>
    </div>
    </div>
  </div>
