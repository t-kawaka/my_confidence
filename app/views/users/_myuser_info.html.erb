<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th><%= t('view.icon') %></th>
      <th><%= t('view.name') %></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% if current_user.icon.present? %>
        <td><%= image_tag(current_user.icon_url, :height => "70px") if current_user.icon %></td>
      <% else %>
        <td><%= image_tag 'default.jpg', :height => '70px' %></td>
      <% end %>
      <td><%= link_to current_user, class: 'd-block message-link, p-4' do %>
        <%= "#{current_user.name}さん" %></td>
      <% end %>
    </tr>
  </tbody>
</table>
