<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th><%= t('view.icon') %></th>
      <th><%= t('view.name') %></th>
      <th>詳細情報</th>
      <th>ユーザーフォロー</th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <% if user.icon.present? %>
          <td><%= image_tag(user.icon_url, :height => "100px") if user.icon %></td>
        <% else %>
          <td><%= image_tag 'default.jpg', :height => '100px' %></td>
        <% end %>

        <% if current_user.id == user.id %>
          <div class= "user_list">
            <td><h5><%= user.name %>さん（ユーザー自身）</h5></td>
            <td><h5><%= link_to 'ユーザー公開中', user_path(user), class: "btn btn-primary" %></h5></td>
            <td><%= render 'follow_form', user: user %></td>
          </div>

        <% else %>
          <div class="user_list">
            <td><h5><%= user.name %>さん</h5></td>
            <% if user.status == "ユーザー公開" %>
              <td><h5><%= link_to '公開中', user_path(user), class: "btn btn-primary" %></h5></td>
              <td><%= render 'follow_form', user: user %></td>
            <% else %>
              <td class="info">非公開</td>
              <td></td>
            <% end %>
          </div>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
