<div class="col-md-8 offset-2 mt-3">
  <div class="text-center">
    <h2>ユーザー情報</h2>
  </div>

  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th><%= t('view.icon') %></th>
        <th><%= t('view.name') %></th>
        <th><%= t('view.email') %></th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <% if @user.icon.present? %>
          <td><%= image_tag(@user.icon_url, :width => "100px") if @user.icon %></td>
        <% else %>
          <td><%= image_tag 'default.jpg', :width => '100px' %></td>
        <% end %>
        <td><h5><%= @user.name %>さん</h5></td>
        <td><h5><%= @user.email %></h5></td>
      </tr>
      <tr>
        <th><%= t('view.introduce') %></th><br>
        <% if @user.introduce.blank? %>
          <td colspan="2">現在、まだ未記入です。</td>
        <% else %>
          <td colspan="2"><%= @user.introduce %></td>
        <% end %>
      </tr>
     </tbody>
  </table>
    <%= link_to "登録ユーザー一覧に戻る", users_path, class:"btn btn-success" %>
</div>

<% if current_user.id == @user.id %>
  <%= render partial: "users/myuser_contents", locals: {tasks: @user.tasks} %>
<% else %>
  <%= render partial: "users/otheruser_contents", locals: {tasks: @user.tasks} %>
<% end %>
