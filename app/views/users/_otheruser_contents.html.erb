<div class="row">
  <div class="col-md-8 offset-2">
    <div class="text-center">
      <h2><%= @user.name %>さんの過去の取り組み</h2>
      <div class="space">
        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th><%= t('view.title') %></th>
              <th><%= t('view.start_time') %></th>
              <th><%= t('view.progress') %></th>
              <th>詳細</th>
            </tr>
          </thead>

          <tbody>
            <% @user.tasks.recent.first(50).each do |task| %>
              <tr>
                <td><%= task.title %></td>
                <td><%= l task.start_time, format: :short %></td>
                <td><%= task.progress %></td>
                <td><%= link_to '詳細', task, class: "btn btn-primary ml-2 mb-2" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
