<div class="row">
  <div class="col-md-4 mt-3">
    <h2>ユーザー情報</h2>
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th><%= t('view.icon') %></th>
          <th><%= t('view.name') %></th>
          <th>プロ</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= image_tag 'default.jpg', :height => '80px' %></td>
          <td><%= current_user.name %>
          <td><%= link_to "profile", current_user %></td>
        </tr>
      </tbody>

    </table>
  </div>

  <div class="col-md-8 mt-3">
    <div class="text-center">
      <h2>登録されたユーザーさん</h2>

    </div>
    <%= render partial: "users/user_info", locals: {users: @users} %>

    <div class="space">
      <div class="col-md-10">
        <%= paginate @users, window: 2 %>
      </div>
      <%= link_to "戻る", tasks_path, class:"btn btn-success ml-3" %>
    </div>
  </div>
</div>
