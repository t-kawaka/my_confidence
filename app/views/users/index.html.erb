<div class="col-md-8 offset-2 mt-5">
  <div class="text-center">
    <h2>登録されたユーザーさん</h2>
  </div>
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th><%= t('view.icon') %></th>
        <th><%= t('view.name') %></th>
        <th>詳細情報</th>
      </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
      <tr>
        <% if user.icon.present? %>
          <td><%= image_tag(user.icon_url, :height => "100px") if user.icon %></td>
        <% else %>
          <td><%= image_tag 'default.jpg', :height => '100px' %></td>
        <% end %>

        <% if current_user.id == user.id %>
          <div class= "user_list">
            <td><h5><%= user.name %>さん（ユーザー自身）</h5></td>
            <td></td>
          </div>
        <% else %>
          <div class="user_list">
            <td><h5><%= user.name %>さん</h5></td>
            <td><h5><%= link_to '詳細情報', user_path(user), class: "btn btn-primary" %></h5></td>
          </div>
        <% end %>
      </tr>
    <% end %>
  </table>
  <div class="space">
    <div class="col-md-10">
      <%= paginate @users %>
    </div>
    <%= link_to "戻る", tasks_path, class:"btn btn-success ml-3" %>
  </div>
</div>
