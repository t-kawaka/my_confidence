<div class="row">
  <div class="col-md-4 mt-3">
    <div class="text-center">
      <h2>ユーザー情報</h2>
    </div>
    <%= render partial: "users/myuser_info", locals: {users: @users} %>
  </div>

  <div class="col-md-8 mt-3">
    <div class="text-center">
      <h2>登録されたユーザーさん</h2>
    </div>
    <%= render partial: "users/other_info", locals: {users: @users} %>

    <div class="space">
      <div class="col-md-10">
        <%= paginate @users, window: 2 %>
      </div>
      <%= link_to "戻る", tasks_path, class:"btn btn-success ml-3" %>
    </div>
  </div>
</div>
