<ul>
  <% comments.each do |comment| %>
    <% if comment.id.present? %>
      <li>
        <p><%= comment.content %></p>
        <% if comment.user.try(:name) %>
          投稿者：<%= comment.user.name %><br>
        <% else %>
          Not User Data<br>
        <% end %>

        <% if comment.user == current_user %>
          <p>
            <%= link_to 'コメントを削除する', comment_path(comment), method: :delete, remote: true, data:{ confirm:"削除しますか？" } %>
            / <%= link_to 'コメントを編集する', edit_comment_path(comment) %>
          </p>
        <% end %>
      </li>
    <% end %>
  <% end %>
</ul>
