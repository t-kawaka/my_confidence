<div class="row">
<div class="col-md-12">
  <div class="text-center">
    <h2>あなたの過去の取り組み</h2>
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th><%= t('view.title') %></th>
          <th><%= t('view.start_time') %></th>
          <th><%= t('view.progress') %></th>
          <th>詳細</th>
          <th>編集</th>
          <th>削除</th>
        </tr>
      </thead>

      <tbody>
        <% @tasks.each do |task| %>
          <tr>
            <td><%= task.title %></td>
            <td><%= l task.start_time, format: :short %></td>
            <td><%= task.progress %></td>
            <td><%= link_to '詳細', task, class: "btn btn-primary ml-2 mb-2" %></td>
            <td><%= link_to '編集', edit_task_path(task.id), class: "btn btn-success ml-2 mb-2" %></td>
            <td><%= link_to '削除',task_path(task.id), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger ml-2 mb-2" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
</div>
