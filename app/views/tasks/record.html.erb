<div class="row">
  <div class="col-md-8 offset-2">
    <div class="text-center">
      <h2>あなたのアクション記録</h2>
    </div>
    <div class="text-center">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <th>タイトル</th>
          <th>実績</th>
        </thead>
        <tbody>
          <tr>
            <th>アクション数(合計数)</th>
            <td><%= @tasks.all.count(:id) %>回</td>
          </tr>
          <tr>
            <th>開始数</th>
            <td><%= @task_start.all.count(:id) %>回</td>
          </tr>
          <tr>
            <th>途中数</th>
            <td><%= @task_halfway.all.count(:id) %>回</td>
          </tr>
          <tr>
            <th>完了数</th>
            <td><%= @task_finish.all.count(:id) %>回</td>
          </tr>
          <tr>
            <th>活動合計時間</th>
            <td><%= @tasks.all.sum(:require_time) %>分</td>
          </tr>
        </tbody>
      </table>
    </div>
    <%= link_to '過去の取り組みに戻る', list_tasks_path, class:"btn btn-info ml-2 mb-3" %>
  </div>
</div>
