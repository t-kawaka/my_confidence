<div class="col-lg-4 col-sm-4 offset-4 mt-5">
  <div class="card">
    <article class="card-body">
      <div class="text-center">
        <h2>ログイン</h2>
      </div>
      <hr>
      <% if notice %>
        <p class="alert alert-success"><%= notice %></p>
      <% end %>
      <% if alert %>
        <p class="alert alert-danger"><%= alert %></p>
      <% end %>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group mt-4">
          <div class="input-group">
            <div class="input-group-prepend">
              <span class="input-group-text"> <i class="fa fa-envelope"></i></span>
            </div>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder:"メールアドレス" %>
          </div>
        </div>

        <div class="form-group mt-2">
           <div class="input-group">
             <div class="input-group-prepend">
               <span class="input-group-text"> <i class="fa fa-lock"></i></span>
             </div>
             <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder:"パスワード" %>
           </div>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="form-group">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
        <div class="actions">
          <%= f.submit "ログイン", class:"btn btn-primary" %>
        </div>
        <%= render "devise/shared/links" %>
      <% end %>
    </article>
  </div>
</div>
