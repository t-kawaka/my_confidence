<div class="col-md-6 offset-3 mt-5">
  <div class="text-center">
    <h2>ログイン</h2>

    <% if flash[:alert] %>
      <%= flash[:alert] %>
    <% end %>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.label :email, class: "control-label" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder:"メールアドレス" %>
    </div>

    <div class="form-group">
      <%= f.label :password, class: "control-label" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder:"メールアドレス" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-group">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="space">
      <div class="actions">
        <%= f.submit "Log in", class:"btn btn-primary" %>
      </div>
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
</div>
