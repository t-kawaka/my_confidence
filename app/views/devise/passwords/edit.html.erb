<div class="col-lg-4 col-sm-4 offset-4 mt-5">
  <div class="card">
    <article class="card-body">
      <h2>パスワード再設定</h2>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="form-group mt-2">
          <div class="input-group">
            <div class="input-group-prepend">
              <span class="input-group-text"><i class="fa fa-lock"></i></span>
            </div>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder:"パスワード (6文字以上)" %>
          </div>
        </div>

        <div class="form-group mt-2">
          <div class="input-group">
            <div class="input-group-prepend">
              <span class="input-group-text"><i class="fa fa-lock"></i></span>
            </div>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder:"パスワード確認" %>
          </div>
        </div>

        <div class="actions">
          <%= f.submit "パスワード再設定", class:"btn btn-primary" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </article>
  </div>
</div>
