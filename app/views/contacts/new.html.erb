<div class="row">
  <div class="col-md-8 offset-2">
    <div class="text-center">
      <h2>お問い合わせフォーム</h2>
      <%= form_with(model: @contact, url: confirm_new_contact_path, local: true) do |form| %>
        <% if @contact.errors.any? %>
          <div id="error_explanation">
            <h3><%= @contact.errors.count %>件のエラーがあります。</h3>
            <ul>
            <% @contact.errors.full_messages.each do |msg| %>
              <li class="mr-5"><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
    </div>

      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= form.label :content %>
        <%= form.text_area :content, class:"form-control" %>
      </div>
      <div class="space">
        <div class="submit">
          <%= form.submit "確認画面にすすむ", class:"btn btn-primary" %>
          <%= link_to "戻る", root_path, class:"btn btn-info ml-2" %>
        </div>
      </div>
      <% end %>
  </div>
</div>
